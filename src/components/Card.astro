---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  loading?: "eager" | "lazy";
  name: string;
  socialName: string;
}

const { loading = "lazy", image, name, socialName } = Astro.props;
---

<section
  class="flex max-h-[233px] max-w-[340px] flex-col gap-4 rounded-lg border border-primary bg-primary p-6 shadow-base"
>
  <header class="flex gap-4">
    <Image
      src={image}
      alt=""
      width={48}
      height={48}
      class="h-12 w-12 shrink-0"
      densities={[1, 1.5, 2]}
      loading={loading}
    />
    <div class="flex flex-col gap-min overflow-hidden">
      <h1 class="overflow-hidden text-ellipsis text-nowrap">{name}</h1>
      <p class="overflow-hidden text-ellipsis text-nowrap text-sm">
        {socialName}
      </p>
    </div>
  </header>
  <p><slot /></p>
</section>
